<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="admin.adminController">
   <top>
      <BorderPane maxHeight="110.0" prefHeight="98.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <left>
            <GridPane prefHeight="80.0" prefWidth="862.0" BorderPane.alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="309.0" minWidth="10.0" prefWidth="128.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="724.0" minWidth="10.0" prefWidth="724.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Admin Name:">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  <Label text="Admin ID:" GridPane.rowIndex="1">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblName" prefHeight="21.0" prefWidth="411.0" GridPane.columnIndex="1">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblID" prefHeight="21.0" prefWidth="411.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </GridPane>
         </left>
         <right>
            <Button alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#onLogOut" text="Log Out" BorderPane.alignment="CENTER" />
         </right>
         <bottom>
            <Separator prefWidth="200.0" BorderPane.alignment="CENTER" />
         </bottom>
      </BorderPane>
   </top>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <left>
      <VBox prefHeight="482.0" prefWidth="150.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <RadioButton fx:id="radioStudents" mnemonicParsing="false" selected="true" text="Students">
               <toggleGroup>
                  <ToggleGroup fx:id="radioGroup" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="radioTeachers" mnemonicParsing="false" text="Teachers" toggleGroup="$radioGroup" />
            <RadioButton fx:id="radioCourses" mnemonicParsing="false" text="Courses" toggleGroup="$radioGroup" />
            <ComboBox fx:id="classgradesList" onAction="#showClassrooms" prefWidth="150.0" promptText="--class grade" />
            <ComboBox fx:id="classroomsList" onAction="#loadCourses" prefWidth="150.0" promptText="--classroom" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets right="10.0" top="10.0" />
         </padding>
      </VBox>
   </left>
   <center>
      <GridPane maxHeight="2000.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="2000.0" minHeight="10.0" prefHeight="411.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="50.0" minHeight="10.0" prefHeight="36.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <TableView fx:id="studentsTable" editable="true" maxHeight="1000.0" prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn fx:id="colStudentID" onEditCommit="#onEditStudentID" prefWidth="75.0" text="Student ID" />
                <TableColumn fx:id="colStudentName" onEditCommit="#onEditStudentName" prefWidth="75.0" text="Student Name" />
                  <TableColumn fx:id="colStudentClassGrade" onEditCommit="#onEditStudentClassGrade" prefWidth="75.0" text="Class Grade" />
                  <TableColumn fx:id="colStudentClassroom" onEditCommit="#onEditStudentClassroom" prefWidth="75.0" text="Classroom" />
                  <TableColumn fx:id="colParentName" onEditCommit="#onEditStudentParentName" prefWidth="75.0" text="Parent Name" />
                  <TableColumn fx:id="colParentID" onEditCommit="#onEditStudentParentID" prefWidth="75.0" text="Parent ID" />
                  <TableColumn fx:id="colParentContact" onEditCommit="#onEditStudentContact" prefWidth="75.0" text="Contact " />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox fx:id="studentsBox" alignment="CENTER_RIGHT" maxHeight="130.0" prefHeight="100.0" prefWidth="200.0" spacing="20.0" GridPane.rowIndex="1">
               <children>
                  <Button mnemonicParsing="false" onAction="#onAddStudent" text="Add a new student" />
                  <Button mnemonicParsing="false" onAction="#onDeleteStudent" text="Delete selected student" />
               </children>
            </HBox>
            <TableView fx:id="teachersTable" editable="true" prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn fx:id="colTeacherID" onEditCommit="#onEditTeacherID" prefWidth="75.0" text="Teacher ID" />
                <TableColumn fx:id="colTeacherName" onEditCommit="#onEditTeacherName" prefWidth="75.0" text="Teacher Name" />
                  <TableColumn fx:id="colTeacherContact" onEditCommit="#onEditTeacherContact" prefWidth="75.0" text="Contact" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <TableView fx:id="coursesTable" editable="true" prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn fx:id="colCourse" onEditCommit="#onEditCourseName" prefWidth="75.0" text="Course" />
                  <TableColumn fx:id="colInstructorName" prefWidth="75.0" text="Instructor Name" />
                <TableColumn fx:id="colInstructorID" onEditCommit="#onEditCourseInstructorID" prefWidth="75.0" text="Instructor ID" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox fx:id="teachersBox" alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="20.0" GridPane.rowIndex="1">
               <children>
                  <Button mnemonicParsing="false" onAction="#onAddTeacher" text="Add a new teacher" />
                  <Button mnemonicParsing="false" onAction="#onDeleteTeacher" text="Delete selected teacher" />
               </children>
            </HBox>
            <HBox fx:id="coursesBox" alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="20.0" GridPane.rowIndex="1">
               <children>
                  <Button mnemonicParsing="false" onAction="#onAddCourse" text="Add a new course" />
                  <Button mnemonicParsing="false" onAction="#onDeleteCourse" text="Delete selected course" />
               </children>
            </HBox>
         </children>
      </GridPane>
   </center>
</BorderPane>
